#!/bin/bash

#----------------------------------------------------------------------------------------------
#
#      MAIN
#
#----------------------------------------------------------------------------------------------

# declarations of MUST HAVE globals
declare -r PROGRAM_DIR="$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")"
declare -r PROGRAM_NAME="$(basename "${BASH_SOURCE[0]}")"
declare -r LOGFILE="$(pwd)/${PROGRAM_NAME}.log"
declare -r LIB_NAME='docker-utilities'
declare -A OPTS=()
declare -a ARGS=()
declare -A IMAGES_TO_DELETE=()
declare -A REPO_DIGESTS=()

# load our libraries
declare -r loader="${PROGRAM_DIR}/bashlib/appenv.bashlib"
if [ ! -e "$loader" ]; then
    echo 'Unable to load libraries' >&2
    exit 1
fi
source "$loader"
appenv.initialize "$@"

# our main script
declare -i status=0
{
        if [ "${OPTS['isrunning']:-}" ]; then
            "${OPTS['isrunning']}" || trap.die 'Docker is not running'
        fi

        if [ "${OPTS['user']:-}" ]; then
            export _REGISTRY_USER="${OPTS['user']}"
            export _REGISTRY_CREDENTIALS=$(credentials.get registry)
        fi
 
        # regular output
        "${OPTS['cmd']}" ${OPTS['oper']:-} "${ARGS[@]}" && status=$? || status=$?

} 2>&1 | tee "$LOGFILE"

exit $status
